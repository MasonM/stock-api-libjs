{
  "name": "stock-api-libjs",
  "engines": {
    "node": "6.3.1"
  },
  "version": "1.0.0",
  "private": true,
  "description": "Javascript implementation of the various APIs provided by the Stock services",
  "main": "src/index.js",
  "scripts": {
    "test": "npm run test:unit && npm run lint",
    "lint": "./node_modules/eslint/bin/eslint.js -f table ./ || true",
    "lint-jenkins": "./node_modules/eslint/bin/eslint.js -o tests/reports/eslint/log.xml -f junit ./",
    "test:unit": "mocha --compilers js:babel-core/register",
    "coverage": "nyc --reporter=html --reporter=text mocha --compilers js:babel-core/register --timeout=3000",
    "build:prod": "NODE_ENV=production webpack -p --colors --progress",
    "build:dev": "NODE_ENV=development webpack --colors --progress",
    "build": "npm run build:dev && npm run build:prod",
    "watch": "NODE_ENV=development webpack-dev-server --debug --progress --colors --hot"
  },
  "author": "Stock Web",
  "license": "ISC",
  "dependencies": {
    "requirejs": "2.2.0",
    "uuid": "3.0.1"
  },
  "devDependencies": {
    "babel-cli": "6.24.0",
    "babel-core": "6.24.0",
    "babel-loader": "6.4.1",
    "babel-preset-es2015": "6.24.0",
    "chai": "^3.5.0",
    "eslint": "^3.17.1",
    "eslint-config-airbnb-base": "^11.1.1",
    "eslint-plugin-import": "^2.2.0",
    "html-webpack-plugin": "^2.28.0",
    "istanbul": "^0.4.5",
    "jsdom": "9.5.0",
    "jsdom-global": "2.1.0",
    "mocha": "^3.2.0",
    "mocha-eslint": "^3.0.1",
    "nyc": "^10.1.2",
    "sinon": "2.0.0",
    "webpack": "2.2.1",
    "webpack-dev-server": "^2.4.2"
  }
}
